<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".dhome.ProfileActivity">

    <RelativeLayout
        android:id="@+id/profileSettingBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/profileSettingImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/call_center" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow"
            android:layout_marginTop="4dp"
            />

        <TextView
            android:id="@+id/profileSettingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/profileSettingImage"
            android:fontFamily="sans-serif-condensed"
            android:text="User Profile"
            android:textColor="@color/black"
            android:textSize="15sp"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_line"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/profileSettingBlock"
        />

    <RelativeLayout
        android:id="@+id/aboutUsBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileSettingBlock"
        android:layout_margin="8dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/aboutUsImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/aboutus" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow"
            android:layout_marginTop="4dp"
            />

        <TextView
            android:id="@+id/gasRefillText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/aboutUsImage"
            android:fontFamily="sans-serif-condensed"
            android:text="Get In Touch"
            android:textColor="@color/black"
            android:textSize="15sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_line"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/aboutUsBlock"
        />

    <RelativeLayout
        android:id="@+id/signOutBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/aboutUsBlock"
        android:layout_margin="8dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/staticsImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/signout" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow"
            android:layout_marginTop="4dp"
            />

        <TextView
            android:id="@+id/signOutText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/staticsImage"
            android:fontFamily="sans-serif-condensed"
            android:text="Sign Out"
            android:textColor="@color/black"
            android:textSize="15sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_line"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/signOutBlock"
        />




</RelativeLayout>