<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/fifteen_dp"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/batteryImg"
        android:layout_width="@dimen/hundren_dp"
        android:layout_height="@dimen/hundren_dp"
        android:src="@drawable/ceiling" />

    <TextView
        android:id="@+id/batteryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/batteryImg"
        android:layout_marginTop="@dimen/five_dp"
        android:layout_centerInParent="true"
        android:fontFamily="sans-serif-condensed"
        android:text="Ceiling Light" />

</RelativeLayout>